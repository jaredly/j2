const rec backtrack: <T,>(() ={DecideOrFail}> T, () ={}> T) ={}> T = <T,>(
    fn: () ={DecideOrFail}> T,
    orElse: () ={}> T,
): T ={}> {
    handle! fn {
        DecideOrFail.decide(() => k) => {
            backtrack<T>(() => k(true), () => backtrack<T>(() => k(false), orElse))
        },
        DecideOrFail.fail(() => _) => {
            orElse()
        },
        pure(x) => x
    }
}

const rec backtrackReverse: <T,>(() ={DecideOrFail}> T, () ={}> T) ={}> T = <T,>(
    fn: () ={DecideOrFail}> T,
