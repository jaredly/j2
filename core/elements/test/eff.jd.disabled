let backtrack: <T>(Task<[Decide|Fail], T>, () => T) => T = <T>(
    task: Task<[Decide|Fail], T>,
    orElse: () => T,
): T => {
    handle! fn {
        `Decide(_, k) => {
            backtrack<T>(k(true), () => backtrack<T>(() => k(false), orElse))
        },
        `Fail(_, _) => {
            orElse()
        },
        `Return(x) => x
    }
}



